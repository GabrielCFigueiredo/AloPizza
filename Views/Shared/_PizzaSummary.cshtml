@using AloPizza.Models
@model Pizza

<div class="col-sm-4 col-md-3 col-lg-4">
    <h4>@Model.Name</h4>
    <p><img src="@Model.ImageUrl" alt=""></p>
    <h3>Pre√ßo: @Model.Price.ToString("c")</h3>
    <a asp-controller="Pizza" asp-action="Details" asp-route-pizzaId="@Model.PizzaId">@Model.Name</a>

    <p>@Model.ShortDescription</p>
    <div>
        <p class="button">
            <a class="btn btn-primary" id="cartButton" asp-controller="ShoppingCart"
            asp-action="AddItemToShoppingCart" asp-route-PizzaId="@Model.PizzaId">
            Incluir no Carrinho
            </a>
        </p>
    </div>
</div>